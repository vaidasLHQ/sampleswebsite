{
  "name": "@frogdrip/payment-sdk",
  "version": "1.0.0",
  "description": "Unified Payment SDK for FrogDrip Platform - Stripe Connect + Multi-provider support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js",
      "types": "./dist/server/index.d.ts"
    },
    "./widget": {
      "import": "./dist/widget/index.mjs",
      "require": "./dist/widget/index.js",
      "types": "./dist/widget/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "keywords": [
    "payment",
    "stripe",
    "stripe-connect",
    "sdk",
    "frogdrip",
    "checkout"
  ],
  "author": "FrogDrip",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "stripe": "^14.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

